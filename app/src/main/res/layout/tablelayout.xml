<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
    <TableRow>
    <TextView
        android:id="@+id/TextTable"
        android:layout_weight="1"
        android:background="#b0b0b0"
        android:gravity="center"
        android:padding="20dp"
        android:text="row 3 column 1"
        android:textColor="#000000"
       />

    <TextView
        android:id="@+id/TextTable2"
        android:layout_weight="1"
        android:background="#a09f9f"
        android:gravity="center"
        android:padding="20dp"
        android:text="row 3 column 2"
        android:textColor="#000000"/>
    </TableRow>
    <TableRow>
        <TextView
        android:id="@+id/TextTable3"
        android:layout_weight="1"
        android:background="#000fff"
        android:gravity="center"
        android:padding="20dp"
        android:text="row 4 column 3"
        android:textColor="#ffffff"/>
    </TableRow>
    <TableRow android:background="@color/black">
        <TextView
            android:id="@+id/TextTable4"
            android:layout_weight="1"
            android:background="#ffff00"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginRight="2dp"
            android:text="row 5 column 4"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/TextTable5"
            android:layout_weight="1"
            android:background="#FFFF00"
            android:gravity="center"
            android:padding="19dp"
            android:text="row 5 column 5"
            android:layout_marginRight="2dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/TextTable6"
            android:layout_weight="1"
            android:background="#ffff00"
            android:gravity="center"
            android:padding="20dp"
            android:text="row 5 column 6"
            android:textColor="#000000"/>

    </TableRow>
</TableLayout>
